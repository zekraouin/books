<style>
    .book-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .book-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .book-details {
        padding: 20px;
    }

    .book-title {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .book-description {
        font-size: 1rem;
        color: #666;
        margin-bottom: 15px;
    }

    .book-author {
        font-size: 0.9rem;
    }

    .book-footer {
        background-color: #f9f9f9;
        padding: 10px;
        text-align: center;
        font-style: italic;
    }
</style>

<h1 class="text-center mb-4">Books List</h1>

<div class="container">
    <div class="row">
        <% books.forEach((book) => { %>
            <div class="col-md-4">
                <div class="book-card">
                    <a href="/books/detail/<%= book.slug %>">
                        <img src="<%= book.image %>" class="book-image" alt="Book Image">
                    </a>
                    <div class="book-details">
                        <h5 class="book-title"><%= book.title %></h5>
                        <p class="book-description"><%= book.description %></p>
                        <p class="book-author">Author: <strong><%= book.author.name %></strong> </p>
                    </div>
                    <div class="book-footer"><span class="text-muted" ><%= book.createdAt.toLocaleDateString() %></span ></div>
                </div>
                
            </div>
        <% }) %>
    </div>
</div>
