<div class="container mb-5 ml-0">
    <div class="row">
        <div class="col-md-6 offset-md-1">
            <h1 class="mb-5">Book Detail</h1>
            <hr>
            <% if(typeof error !=="undefined"){ %>
                <span class="alert alert-danger mb-3"><%= error %></span>
            <% } %>
            <% if(typeof book !=="undefined"){ %>
                <div class="card">
                    <img src="<%= book.image %>" class="card-img-top" alt="Book Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= book.title %></h5>
                        <p class="card-text"><%= book.description %></p>
                        <p class="card-text">Author: <strong><%= book.author.name %></strong></p>
                        <p class="card-text">Created At: <%= book.createdAt.toLocaleDateString() %></p>
                        <a href="/books/<%= book.slug %>/edit" class="btn btn-primary">Edit</a>
                        <form action="/books/<%= book._id %>/delete" method="POST" style="display: inline-block;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/books" class="btn btn-secondary">Back to Books</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
